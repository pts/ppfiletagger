t	Tag files
	exec bash 3>&0 <<'END'
	. $HOME/zsh/ppfiletagger_shell_functions.sh
	cd %d
	_mmfs_tag %{What tags to add or -remove} %s
	echo -n "Press <Enter> to return to mc."; read <&3
	END

s	Show tags
	exec bash 3>&0 <<'END'
	. $HOME/zsh/ppfiletagger_shell_functions.sh
	cd %d
	_mmfs_show %s
	echo -n "Press <Enter> to return to mc."; read <&3
	END

